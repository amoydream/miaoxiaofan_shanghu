/* pages/shopAdministrator/shopListOne/shopListOne.wxss */
page{
    background: #f2f2f2;
}
.container,.shopManage{
    height: 100%;
}
.shopMiddle{
    border: 1rpx solid #f1f1f1;
    background: white;

}
.shopMiddleAll{
    width: 400rpx;
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
}

 .chooseSort{
    height: 70rpx;
    line-height: 70rpx;
    font-size:26rpx;
    color:rgba(102,102,102,1);
    text-align: center;
    background: #f2f2f2;
}

picker{
    width: 230rpx;
    display: inline-block;
}

.shopMiddleAll view{
    padding: 20rpx 0;
    box-sizing: border-box;
    font-size: 30rpx;
}
.shopMiddleAllTab{
    border-bottom: 3px solid #eac398;
    color: #eac398
}
.shopFotter{
    width: 100%;
    height: calc(100% - 255rpx);
    overflow: scroll;
    background: white;
}
.shopListOne{
    display: flex;
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f1f1f1;
    margin-bottom: 10rpx;
    height: 240rpx;
    position: relative;
}
.shopFotterLeft{
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}
.shopFotterRight .shopText{
    font-size: 35rpx;
    margin-bottom:30rpx;
}
.shopFotterLeft image{
    width: 100%;
    height: 100%;
}
.shopFotterRight{
    position: relative;
    width: 500rpx;
}
.shopProduct{
    font-size: 30rpx;
}
.shopFotterRight .shopProduct{
    display: flex;
}
.shopProduct .shopProductNewPrice{
    margin-right: 20rpx;
}
.shopProductNewPrice view:nth-of-type(1){
    color:#eac398;
    margin-bottom: 10rpx;
}
.shopProductOldPrice view:nth-of-type(1){
    margin-bottom: 10rpx;
}
.moreImg{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 30rpx;
    right: 20rpx;
}

.mainBottom_refresh,.mainBottom_loadMore{
    text-align: center;
    font-size: 32rpx;
}
.operation>view{
    width:120rpx;
    height:56rpx;
    line-height: 56rpx;
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 28rpx;
    text-align: center;
    background: #CEB267;
    color: white;
    border-radius: 15rpx;
}


.select{
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    z-index: 999;
}

.select image{
    width: 35rpx;
    height: 35rpx;
}
.batchS{
    z-index: 9999;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 240rpx;
    background: #e8e8e8;
    border-top: 1px solid #cccccc;

}
.batchS>button{
    height:80rpx;
    background:rgba(255,255,255,1);
    box-shadow:0rpx -1rpx 7rpx 0rpx rgba(0, 0, 0, 0.1);
    font-size:30rpx;
    color:rgba(51,51,51,1);
}




/*   下面定位  */
.shopAdd{
    width: 100%;
    background: #f0f0f0;
    height: 88rpx;
    line-height: 88rpx;
    position: fixed;
    bottom: 0;
    box-sizing: border-box;
    font-size:30rpx;
    color:rgba(255,255,255,1);
    text-align: center;
    z-index: 999;
}


.shopAdd>navigator:first-child{
    width: 240rpx;
    height: 88rpx;
    background:rgba(206,178,103,1);
    display: inline-block;
}
.shopAdd>view:last-child{
    width: 510rpx;
    height: 88rpx;
    background:rgba(89,92,161,1);
    display: inline-block;
}


.without{
    padding-top: 100rpx;
    text-align: center;
    font-size:30rpx;
    color:rgba(102,102,102,1);
}

.without image{
    width: 260rpx;
    height: 270rpx;
}