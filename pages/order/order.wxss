page{
    background: #f2f2f2;
}
.container{
    height: 100%;
    box-sizing: border-box;
}

.head{
    background: white;
    height: 100rpx;
    padding: 12rpx 0;
    box-sizing: border-box;
}

.condition {
    width:460rpx;
    height: 76rpx;
    border: 1rpx solid #CEB267;
    display: flex;
    margin: 0 auto;
    box-sizing: border-box;
    border-radius: 8rpx;
    overflow: hidden;
}

.condition > view {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    line-height: 76rpx;
    color: #333333;

}

.condition > view.active {
    background: #CEB267;
    color: white;
}

/*订单管理*/
.management {
    display: none;
    height: calc(100% - 100rpx);
    padding:10rpx;
    box-sizing: border-box;
}
.management .main-box{
    height: calc(100% - 80rpx);
    overflow: scroll;
}
.management .management-tab {
    display: flex;
    box-shadow: 0 0 10px #f3f3f3;
    background: white;
}

.management .management-tab > view {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    line-height: 70rpx;
    box-sizing: border-box;
}
.management .management-tab > view.active{
    color: #595CA1;
    border-bottom: 5rpx solid #595CA1;
}


.management .management-item{
    margin-bottom: 20rpx;
    background: white;
}

.management .management-item .item-title {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #f3f3f3;
    font-size:24rpx;
    color:rgba(153,153,153,1);
    padding:0 40rpx;
}


/*状态*/
.management .management-item .state {
    float: right;
}

.management .management-item .state.success{
    color:#1cb932;
}
.management .management-item .state.error{
    color: red;
}
.management .management-item .item-main {
    padding: 20rpx 40rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.management .management-item .item-main .left {
    width: 160rpx;
    height: 160rpx;
    float: left;
}

.management .management-item .item-main .middle {
    float: left;
    padding-left: 30rpx;
    padding-top: 20rpx;
}

.management .management-item .item-main .middle text {
    display: block;
    line-height: 60rpx;
}

.management .management-item .item-main .right {
    float: right;
    color: #666666;
}

.management .management-item .item-main .right text {
    display: block;
    text-align: right;
    line-height: 40rpx;
}

.management .management-item .item-foot {
    padding: 0 40rpx;
    border-top: 1px solid #f3f3f3;
    font-size: 24rpx;
    line-height: 50rpx;
}

.management .management-item .item-foot > view {
    float: right;
}

.management .management-item .item-foot > view text {
    color: #eac398;
}


.show{
    display: block;
}

.mainBottom_refresh,.mainBottom_loadMore{
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
}


.look-detail{
    font-size: 24rpx;
    width: 150rpx;
    float: right;
    height: 56rpx;
    margin-left: 20rpx;
    line-height: 56rpx;
    text-align: center;
    background: #e6e6e6;
    color: #333333;
    border-radius: 8rpx;
}

/*无数据时*/
.no-data{
    text-align: center;
    font-size:30rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    padding-top: 300rpx;
}

.no-data image{
    width:260rpx;
    height:280rpx;
    vertical-align: middle;
}