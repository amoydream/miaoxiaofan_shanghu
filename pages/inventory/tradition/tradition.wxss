.container{
    height: 100%;
}
.title{
    padding: 0 80rpx;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    height: 80rpx;
}

.title>view{
    width: 230rpx;
    text-align: center;
    line-height: 80rpx;
    box-sizing: border-box;
}


.title>view.active{
    color: #595CA1;
    border-bottom: 4rpx solid #595CA1;
}

/*货道*/
.aisle-main{
    height: calc(100% - 80rpx);
}

.aisle-main-left{
    width: 180rpx;
    background: #f3f3f3;
    height: 100%;
    float: left;
}

.aisle-main-left-item{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.aisle-main-left-item:after{
    display: block;
    content: '';
    width:80rpx;
    height:2rpx;
    background:#E5E5E5;
    margin-left: 50rpx;
}

.aisle-main-left-item:last-child:after{
    background: #f3f3f3;
}


.aisle-main-left-item.active{
    background: white;
}

.aisle-main-left-item.active:after{
    background: #f3f3f3;
}


.aisle-main-right{
    width: 540rpx;
    float: left;
    margin-left: 30rpx;
    height: 100%;
    overflow: scroll;
}

.aisle-main-right-item-title{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    text-align: center;
    line-height: 70rpx;
    box-shadow:0 2rpx 0px 0px rgba(35,24,21,0.1);
}

.aisle-main-right-item-list{
    height: 160rpx;
    box-shadow:0 2rpx 0px 0px rgba(35,24,21,0.1);
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
}

.aisle-main-right-item-list image{
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}


.aisle-main-right-item-list .list-goods{
    width: 400rpx;
}

.aisle-main-right-item-list .list-goods-info{
    display: flex;
    justify-content: space-between;
}
.aisle-main-right-item-list .list-goods-info>view{
    line-height: 60rpx;
}
.aisle-main-right-item-list .list-goods-info>view text{
   color: #595CA1;
}
.noGoods{
    text-align: center;
    font-size: 30rpx;
    line-height: 150rpx;
}

/*商品*/
.goods-main{
    background: #f2f2f2;
    height: calc(100% - 80rpx);
}
.goods-main-item{
    height:190rpx;
    box-shadow:0 2rpx 0 0 rgba(35,24,21,0.1);
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #333333;
    background: white;
    margin-bottom: 2rpx;
}

.goods-main-item image{
    width: 130rpx;
    height: 130rpx;
}
.goods-main-item .goods-main-info{
    width: 400rpx;
    margin-left: 20rpx;
}

.goods-main-item .goods-main-info>view{
    line-height: 60rpx;
}

.goods-main-item .goods-number{
    width: 175rpx;
    text-align: right;
}

.goods-main-item .goods-number text{
    color: #595CA1;
}