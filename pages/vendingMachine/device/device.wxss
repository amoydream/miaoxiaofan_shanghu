page{
    background: #f2f2f2;
}
.container{
    height: 100%;
}
/*确认*/
.affirm{
    width: 100%;
    height: 88rpx;
    background: white;
    line-height: 88rpx;
    font-size:28rpx;
    font-family:MicrosoftYaHei;
    font-weight:400;
    color:rgba(102,102,102,1);
    position: fixed;
    bottom: 0;
    display: flex;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.affirm>view{
    flex: 1;
}

.affirm image{
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
    vertical-align: text-top;
}

.affirm .btn{
    width:240rpx;
    height:70rpx;
    text-align: center;
    line-height: 70rpx;
    background:rgba(89,92,161,1);
    border-radius:35rpx;
    font-size:28rpx;
    color:rgba(255,255,255,1);
    margin-top: 10rpx;
    float: right;
}

/*设备列表*/
.deviceList{
    height: calc(100% - 88rpx);
    padding: 20rpx;
    box-sizing: border-box;
}

.deviceList .item{
    width:710rpx;
    height:180rpx;
    background:rgba(255,255,255,1);
    border-radius:8rpx;
    margin-bottom: 20rpx;
    font-size:26rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height: 90rpx;
}

.deviceList .item .item-left{
    box-sizing: border-box;
    width: 600rpx;
    float: left;
    height: 100%;
}

.deviceList .item .item-left .no image{
    width: 39rpx;
    height: 40rpx;
    vertical-align: middle;
    margin: 0 20rpx;
}

.deviceList .item .item-left .address image{
    width: 39rpx;
    height: 40rpx;
    vertical-align: middle;
    margin: 0 20rpx;
}

.deviceList .item .item-right{
    box-sizing: border-box;
    width: 110rpx;
    float: left;
    height: 100%;
    line-height: 180rpx;
    text-align: center;
}

.deviceList .item .item-right image{
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}