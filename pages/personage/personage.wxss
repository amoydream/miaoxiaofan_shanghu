page{
    background: #f2f2f2;
}
.container{
    height: 100%;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.addInfo{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    background: white;
    width: 710rpx;
    margin: 0 auto;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.addInfo>view{
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
}
.addInfo input{
    width: 70%;
    height: 80rpx;
    display: inline-block;
    vertical-align: middle;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.addInfo .number{
    border-bottom: 1rpx solid #f2f2f2;
}

.addInfo .number>text{
    width: 30%;
    text-align: right;
    display: inline-block;
}

.province{
    border: 1rpx solid #f2f2f2;
    border-radius: 8rpx;
    width: 200rpx;
    height: 64rpx;
    line-height: 64rpx;
    float: left;
    margin: 0 10rpx;
    position: relative;
    text-align: center;
    padding: 0 !important;
    box-sizing: border-box;
}

.addInfo .address{
    height:160rpx;
}

scroll-view{
    position: absolute;
    top: 50rpx;
    left:0;
    border: 1rpx solid #f2f2f2;
    width: 100%;
    height: 360rpx;
    background: white;
    z-index: 999;
}
.number .main{
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    padding-left: 10rpx;
}
.item{
    height: 64rpx;
    line-height: 64rpx;
}


.confirm{
    width:750rpx;
    height:88rpx;
    background:rgba(89,92,161,1);
    color: white;
    line-height: 88rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    font-size: 30rpx;
}

.btnBind{
    padding: 20rpx;
    height: 145rpx !important;
}

.btnBind button{
    width: 60%;
    font-size: 28rpx;
}
.btnBind .text{
    font-size: 24rpx;
    color: red;
    text-align: center;
    line-height: 40rpx;
    height: 40rpx;
}