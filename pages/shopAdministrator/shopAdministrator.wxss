/* pages/shopAdministrator/shopAdministrator.wxss */
page{
  background: #f2f2f2;
}
.container{
  width: 100%;
  height: 100%;
}

.shopAll .head{
  height: 100rpx;
  background: white;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.shopAll .chooseSort{
  height: 70rpx;
  line-height: 70rpx;
  font-size:26rpx;
  color:rgba(102,102,102,1);
  text-align: center;
}

picker{
  width: 230rpx;
  display: inline-block;
}

.shopTop{
  width: 500rpx;
  display: flex;
  border: 1rpx solid #CEB267;
  justify-content: space-between;
  margin: 0 auto;
  color: #333333;
  border-radius: 8rpx;
  height: 76rpx;
  line-height: 76rpx;
  box-sizing: border-box;
}
.shopTop view{
  text-align: center;
  flex: 1;
  font-size: 28rpx;
}
.shopTopTab{
  background: #CEB267;
  color: white;
}

/*  商品管理   */
.shopMiddle{
  border: 1rpx solid #f1f1f1;
  background: white;
  height: 80rpx;
}
.shopMiddleAll{
  width: 460rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
}
.shopMiddleAll view{
  box-sizing: border-box;
  font-size: 28rpx;
}
.shopMiddleAllTab{
  border-bottom: 3px solid #595CA1;
  color: #595CA1
}
.shopFotter{
  width: 100%;
  height: calc(100% - 88rpx);
  overflow: scroll;
  background: white;
}
.shopListOne{
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
  margin-bottom: 10rpx;
  height: 240rpx;
  position: relative;
}
.shopFotterLeft{
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
}
.shopFotterRight .shopText{
  font-size: 28rpx;
  margin-bottom:30rpx;
}
.shopFotterLeft image{
  width: 100%;
  height: 100%;
}
.shopFotterRight{
  position: relative;
  width: 500rpx;
}
.shopProduct{
  font-size: 30rpx;
}
.shopFotterRight .shopProduct{
  display: flex;
  width: 100%;
}

.shopFotterRight .class-name{
  font-size:26rpx;
  color:rgba(102,102,102,1);
}

.shopProduct .shopProductNewPrice{
  margin-right: 20rpx;
}
.shopProductNewPrice view:nth-of-type(1){
  color:#595CA1;
  margin-bottom: 10rpx;
}
.shopProductOldPrice{
  float: right;
}
.shopProductOldPrice view:nth-of-type(1){
  margin-bottom: 10rpx;
}
.moreImg{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  right: 20rpx;
}

.shopManage{
  display: none;
  height: calc(100% - 258rpx);
  padding: 0 10rpx;
  box-sizing: border-box;
}
.shopManageShow{
  display: block;
}
.groupManage{
  display: none;
}
.groupManageShow{
  display: block;
  overflow: scroll;
}
/*   下面定位  */
.shopAdd{
  width: 100%;
  background: #f0f0f0;
  height: 88rpx;
  line-height: 88rpx;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  font-size:30rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  z-index: 999;
}


.shopAdd>navigator:first-child{
  width: 250rpx;
  height: 88rpx;
  background:rgba(206,178,103,1);
  display: inline-block;
}

.shopAdd>navigator:nth-child(2){
  width: 250rpx;
  height: 88rpx;
  background:#6DA0F1;
  display: inline-block;
}

.shopAdd>view:last-child{
  width: 250rpx;
  height: 88rpx;
  background:rgba(89,92,161,1);
  display: inline-block;
}


/* 分组管理   */
.groupClassify{
  display: flex;
  font-size: 30rpx;
  padding: 30rpx;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
  background: white;
}

.groupClassify view:nth-of-type(2){
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}
.groupClassify view:nth-of-type(2) image{
  margin-left: 10rpx;
}

.mainBottom_refresh,.mainBottom_loadMore{
  text-align: center;
  font-size: 32rpx;
}
.operation{
  width: 300rpx;
  height: 56rpx;
  line-height: 56rpx;
  position: absolute;
  right: -20rpx;
  bottom: -10rpx;
  font-size: 26rpx;
  text-align: center;
  color: white;
}
.operation >.del{
  float: left;
  width: 120rpx;
  background: #CEB267;
  border-radius: 15rpx;
}
.operation >.del:nth-child(1){
  margin-right: 10%;
}

.select{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  z-index: 999;
  display: flex;
  align-items:center;
  justify-content: center;
}

.select image{
  width: 35rpx;
  height: 35rpx;
}

.batchS{
  z-index: 9999;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background: white;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #efefef;
}
.batchS>view{
  width:150rpx;
  height:58rpx;
  border:2rpx solid rgba(214,214,214,1);
  border-radius:29rpx;
  font-size:26rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  line-height: 58rpx;
  margin-right: 20rpx;
}


.without{
    padding-top: 100rpx;
    text-align: center;
    font-size:30rpx;
    color:rgba(102,102,102,1);

}

.without image{
    width: 260rpx;
    height: 270rpx;
}


