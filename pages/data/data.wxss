.container{
    min-height: 100%;
    background: #F2F2F2;
    color: white;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    position: relative;
}

.data-head{
    height: 100rpx;
    background: white;
    padding: 12rpx 0;
    box-sizing: border-box;
}

.nav{
    width: 80%;
    height: 76rpx;
    border: 1px solid #CEB267;
    display: flex;
    margin: 0 auto;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.nav>view{
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    line-height: 76rpx;
    border-right: 1px solid #eac398;
    color: #333333;
}
.nav>view:last-child{
    border-right: 0;
}
.nav>view.active{
    background: #CEB267;
    color: white;
}
.all{
    font-size: 28rpx;
    line-height: 70rpx;
    width: 200rpx;
    float: left;
    color: #666666;
    padding-left: 50rpx;
    box-sizing: border-box;
}

.time_main{
    height: 80rpx;
    display: flex;
    background: white;
    padding: 0 30rpx;
}
.time_main>view{
    font-size:30rpx;
    color:rgba(51,51,51,1);
    flex: 2;
    text-align: center;
    line-height: 80rpx;
}
.time_main>view.active{
    color: #595CA1;
    border-bottom: 3rpx solid #595CA1;
}

/*商品统计*/
.goods .goods_item{
    width:710rpx;
    background:white;
    border-radius:8rpx;
    margin: 0 auto;
    margin-top: 20rpx;
}

.goods .goods_item .goods_item_title{
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    box-shadow:0 1px 0 0 rgba(0, 0, 0, 0.1);
    color: #333333;
    text-indent: 10px;
}

.goods_item .goods_box{
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.goods_item .one{
    height: 250rpx;
}

.goods_item .two{
    height: 340rpx;
    padding: 28rpx 20rpx;
    box-sizing: border-box;
}

.goods_item .goods_box>.li{
    display: flex;
    align-items: center;
    margin: 12rpx 0;
    color: #999999;
    font-size: 24rpx;
}

.goods_item .goods_box>.li text{
    text-align: right;
    padding-right: 10rpx;
    box-sizing: border-box;
    width: 20%;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

.goods_item .goods_box>.li .progress{
    width: 80%;
    display: flex;
    height: 44rpx;
    background: #F4F4F7;
    line-height: 44rpx;
}

.goods_item .goods_box>.li .progress .none{
    text-indent: 10rpx;
}


/*收入统计*/
.market{
    margin-top: 20rpx;
    position: absolute;
    height: calc(100% - 220rpx);
    width: 100%;
}
.today{
    height: 300rpx;
    background: #ffffff;
    margin: 0rpx auto;
    width: 710rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    padding: 0 10rpx;
}
.today>view{
    width: 172rpx;
    height: 150rpx;
    text-align: center;
    font-size: 36rpx;
    border-right: 1rpx solid #f2f2f2;
    box-sizing: border-box;
    float: left;
    padding: 20rpx 0;
}

.today>view:nth-child(-n+4){
    border-bottom: 1rpx solid #f2f2f2;
}

.today>view:nth-child(4n+4){
    border-right: none;
}


.today>view .specific{
    font-size:30rpx;
    font-family:MicrosoftYaHei;
    color:rgba(89,92,161,1);
}


.today>view .direction{
    font-size:26rpx;
    font-family:MicrosoftYaHei;
    color:rgba(51,51,51,1);
    line-height: 50rpx;
}
/*收入列表*/
.income-list{
    line-height: 80rpx;
    text-align: center;
}
.income-list .tr{
    font-size: 30rpx;
    display: flex;
}
.income-list .tr:nth-child(odd){
    background: white;
}

.income-list .tr .th{
    color: #333333;
    flex: 1;
}

.income-list .tr .td{
    color: #666666;
    flex: 1;
}




/*标题*/
.more-title{
    height: 70rpx;
    line-height: 70rpx;
    font-size:26rpx;
    font-family:MicrosoftYaHei;
    color: #666666;
    padding-left: 40rpx;
    position: relative;
}

.more-title:before{
    content: '';
    position: absolute;
    width:6rpx;
    height:30rpx;
    background:rgba(89,92,161,1);
    border-radius:3rpx;
    top: 50%;
    left: 20rpx;
    transform: translateY(-50%);
}


.prospect{
    margin-top: 30rpx;
    padding-left: 30rpx;
    height: 80rpx;
    background: #714092;
    line-height: 80rpx;
}
.prospect text{
    font-size: 26rpx;
    color: #c6afd0;
}
.prospect>view{
    display: inline-block;
    font-size: 32rpx;
    padding-left: 20rpx;
}


.title{
    font-size: 32rpx;
    padding-left: 20rpx;
    background: cornflowerblue;
    text-align: center;
}

.market-box,.draw-box{
    width: 710rpx;
    height: 500rpx;
    background: white;
    margin: 0 auto;
    z-index: -1;
}

.device{
    position: absolute;
    height: calc(100% - 220rpx);
    width: 100%;
}

.device .deviceList{
    width:690rpx;
    height:80rpx;
    background:rgba(255,255,255,1);
    border:1px solid rgba(224, 224, 224, 1);
    border-radius:8rpx;
    color: #333333;
    font-size: 30rpx;
    margin: 20rpx auto;
    padding: 0 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.device .deviceList image{
    width: 20rpx;
    height: 30rpx;
}

.section{
    line-height: 70rpx;
}

.section .picker{
    border-bottom: 2rpx solid #f1f1f1;
}


.income_foot{
    font-size: 30rpx;
    color: #333333;
    text-align: center;
    line-height: 70rpx;
}