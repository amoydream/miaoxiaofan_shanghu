/**index.wxss**/
.container{

}
.index_top{
    position: relative;
    height: 380rpx;
}

.index_top:after{
    content: '';
    position: absolute;
    width: 120%;
    height: 180rpx;
    background: #595CA1;
    border-radius: 50%;
    bottom: 0rpx;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
    z-index: -1;
}

.index_top .head_top{
    width: 100%;
    height:200rpx;
    background:#595CA1;
    display: flex;
}

.index_top .head_top>view{
    color: white;
    flex: 1;
    text-align: center;
    padding: 40rpx 0;
    box-sizing: border-box;
    line-height: 60rpx;
    position: relative;
}

.index_top .head_top>view:nth-child(1):after{
    content: '';
    position: absolute;
    width: 2rpx;
    height: 70rpx;
    background: #6B6EB5;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.index_top .head_top> view .info{
    font-size: 30rpx;
    font-weight: bold;
    display: block;
}

.index_top .head_top> view .title{
    font-size: 28rpx;
}

.head {
    width:690rpx;
    height:180rpx;
    background:rgba(255,255,255,1);
    border-radius:8rpx;
    display: flex;
    align-items: center;
    border: 1px solid #E3E3E3;
    margin: 0 auto;
}

.head > view {
    flex: 1;
    box-shadow:-1px 0 0 0 rgba(0, 0, 0, 0.1);
    text-align: center;
    line-height: 60rpx;
    height: 120rpx;
}

.head > view .info{
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    display: block;
}

.head > view .title{
    color: #666666;
    font-size: 28rpx;
}

.main{
    padding: 30rpx;
    padding-right: 0;
}
.main .item{
    width: 29%;
    height: 200rpx;
    text-align: center;
    box-shadow: 0 0 5px rgba(0,0,0,.4);
    border-radius: 20rpx;
    padding-top: 30rpx;
    box-sizing: border-box;
    float: left;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}
.main .item image{
    width: 90rpx;
    height: 90rpx;
    display: block;
    margin: 0 auto;
}
.main .item text{
    font-size: 26rpx;
}