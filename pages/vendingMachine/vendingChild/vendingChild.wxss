/* pages/vendingMachine/vendingChild/vendingChild.wxss */
.container{
    height: 100%;
    background: #f2f2f2;
    padding-top: 30rpx;
    box-sizing: border-box;
}
.head{
    height: 80rpx;
    line-height: 80rpx;
    font-size:28rpx;
    text-align: center;
    font-weight:400;
    color:rgba(51,51,51,1);
    width: 690rpx;
    margin: 0 auto;
    background: white;
}

.noMan{
    font-size:28rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    padding-right: 40rpx;
    background: white;
    width: 690rpx;
    margin: 0 auto;
}
.noMan>view{
    border-bottom: 1rpx solid #F6F6F6;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
}
.noMan input{
    width: 70%;
    height: 80rpx;
    display: inline-block;
    vertical-align: middle;
    float: right;
    text-align: left;
}
.noMan button{
    width: 220rpx;
    font-size: 30rpx;
    border: 1px solid #eac398;
    color: #eac398;
}
.noMan .headImg{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin: 0 auto;
    padding: 20rpx 0;
}
.noMan .headImg image{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 1px solid #f3f3f3;
}
.save{
    font-size: 32rpx;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #595CA1;
    color: white;
    position: fixed;
    bottom: 0;
}

.state{
    position: relative;
}
.state .title{
    width: 160rpx;
    position: absolute;
    line-height: 80rpx;
    left: 0;
    align-items:center;
}
.state .button{
    position: absolute;
    background:#EDECE8;
    width: 120rpx;
    height: 50rpx;
    right: 100rpx;
    top: 15rpx;
    border-radius: 50rpx;
}
.state .button>view{
    height: 50rpx;
    width: 50rpx;
    background: white;
    border-radius: 50%;
    position: absolute;
    transition: 0.3s;
}
.state .button>view.yuan{
    transform: translateX(70rpx);
}
.state .button.yuan{
    background: #595CA1;
}

.noMan>.sex{
    text-align: left;
}
.sex>view{
    width: 150rpx;
    display: inline-block;
    left: 0;
    text-align: center;
}
picker{
    display: inline-block;
}

