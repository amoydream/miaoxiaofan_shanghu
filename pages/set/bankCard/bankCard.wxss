.container{
    padding: 20rpx;
    height: 100%;
    box-sizing: border-box;
}

.addInfo{
    position: fixed;
    width: 100%;
    height: 100%;
    background: white;
    top: 0;
    left: 0;
    padding: 20rpx;
    box-sizing: border-box;
}
.addInfo>view{
    font-size: 30rpx;
    padding: 20rpx 0;
}
.addInfo input{
    border: 1px solid #eee;
    border-radius: 15rpx;
    width: 70%;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
    padding-left: 20rpx;
}

.btn{
    display: flex;
    width: 50%;
    justify-content:space-between;
    margin: 0 auto;
}
.btn>button{
    font-size: 28rpx;
}
.number{
    position: relative;
}
.number scroll-view{
    position: absolute;
    left: 145rpx;
    width: 511rpx;
    height: 200rpx;
    background: white;
    border: 1px solid #cccccc;
    z-index: 1111;
    text-align: center;
}
.number scroll-view view{
    line-height: 60rpx;
}